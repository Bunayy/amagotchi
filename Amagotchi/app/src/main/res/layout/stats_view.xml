<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent">



    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zurück"
        android:id="@+id/buttonBack"
        android:onClick="onStatsBack"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/healthBar"
        android:progress="50"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonBack"
        android:layout_alignStart="@+id/buttonBack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesundheit"
        android:id="@+id/textView2"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_alignBottom="@+id/healthBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sättigung"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/healthBar"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progress="50"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/healthBar"
        android:layout_alignStart="@+id/healthBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schlaf"
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/progressBar"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:progress="50"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motivation"
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/progressBar2"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar3"
        android:progress="50"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/progressBar2"
        android:layout_alignStart="@+id/progressBar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zufriedenheit"
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/progressBar3"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar4"
        android:progress="50"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/progressBar3"
        android:layout_alignStart="@+id/progressBar3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness"
        android:id="@+id/textView7"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/progressBar4"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar5"
        android:progress="50"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/progressBar4"
        android:layout_alignStart="@+id/progressBar4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aufmerksamkeit"
        android:id="@+id/textView8"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/progressBar5"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar6"
        android:progress="50"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/progressBar5"
        android:layout_alignStart="@+id/progressBar5" />

</RelativeLayout>