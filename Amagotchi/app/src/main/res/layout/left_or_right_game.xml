<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    >

    <ImageButton
        android:id="@+id/leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/arrow_left_btn"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onLeftPicked"
        />
    <projekt.fhflensburg.amagotchi.LeftOrRightGameView
        android:id="@+id/leftOrRightGameViewAmagotchi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/leftBtn"
        >
    </projekt.fhflensburg.amagotchi.LeftOrRightGameView>

    <ImageButton
        android:id="@+id/rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/leftOrRightGameViewAmagotchi"
        android:src="@drawable/arrow_right_btn"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onRightPicked"
        />
</RelativeLayout>