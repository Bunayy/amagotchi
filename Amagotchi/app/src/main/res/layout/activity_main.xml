
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">

    <ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <include android:id="@+id/mainMenuView"  layout="@layout/main_menu" />
        <include android:id="@+id/gameView" layout="@layout/game_view" />
        <include android:id="@+id/settingsView"  layout="@layout/settings" />
        <include android:id="@+id/foodChooserView" layout="@layout/food_chooser" />
        <include android:id="@+id/minigamesChooserView" layout="@layout/minigame_chooser" />
        <include android:id="@+id/sumUpGameView" layout="@layout/sum_up_game" />
        <include android:id="@+id/leftOrRightGameView" layout="@layout/left_or_right_game" />
        <include android:id="@+id/newGameView" layout="@layout/new_game_view" />
        <include android:id="@+id/statsView" layout="@layout/stats_view" />
    </ViewFlipper>

</RelativeLayout>